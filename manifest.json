{
  "manifest_version": 3,
  "name": "Booking â†’ Choice Advantage Reservation Validator",
  "version": "1.0.0",
  "description": "Helps during Reconciliation, check all the Reservation from Booking in choice advantage.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.choiceadvantage.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Reservation Status Checker"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  }
}